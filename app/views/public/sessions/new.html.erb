<div class="container">
  <div class="row my-5 mx-auto border">
    <h1 class="col-10 my-3 mx-auto text-center">OsanpoApp</h1>

    <div class="col-8 mx-auto">
      <%= form_with model: @end_user, url: session_path(resource_name) do |f| %>
        <div class="field row mt-3 justify-content-center">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザーネーム", class: "col-7" %>
        </div>

        <div class="field row mt-3 justify-content-center">
          <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "col-7" %>
        </div>

        <div class="field row mt-3 justify-content-center">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "col-7" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field row mt-3 justify-content-center">
            <%= f.check_box :remember_me %>
            <%= f.label "ログイン情報を記憶する" %>
          </div>
        <% end %>

        <div class="actions row my-5 justify-content-center">
          <%= f.submit "ログイン", class: "col-7 btn btn-primary" %>
        </div>
      <% end %>

      <div class="row my-3 justify-content-center">
        <div class="col-10 mt-3 mx-auto text-muted text-center">
          アカウントをお持ちでないですか？
        </div>
        <div class="col-10 mb-5 mx-auto text-muted text-center">
          <%= link_to "登録する", new_end_user_registration_path %>
        </div>
      </div>
    </div>
  </div>
</div>
