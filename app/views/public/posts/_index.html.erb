<div class="container">
  <div class="row my-5">
    <% posts.each do |post| %>
      <div class="col-10 my-3 mx-auto border">
        <div class="row my-3 align-items-center">
          <div class="col-2 text-center"><%= image_tag post.end_user.get_profile_image, size: '50x50' %></div>
          <%= link_to end_user_path(post.end_user) do %>
            <div class="col-7"><%= post.end_user.name %></div>
          <% end %>
        </div>
        <div class="row justify-content-center border-bottom">
          <%= link_to post_path(post) do %>
            <div class="col-10 my-3 text-center">
              <%= image_tag post.get_post_image, size: '600x600' %>
            </div>
            <div class="col-10 my-3 mx-auto text-center">
              <%= post.content %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
