<div class="container">
  <div class="row my-5">
    <% @posts.each do |post| %>
      <div class="col-10 my-3 mx-auto border">
        <div class="row my-3 mx-auto align-items-center justify-content-center">
          <div class="col-2 text-center"><%= image_tag post.end_user.get_profile_image, size: '50x50', class: "img-fluid" %></div>
          <div class="col-4">
            <%= link_to end_user_path(post.end_user), {class: "text-secondary"} do %>
              <%= post.end_user.name %>
            <% end %>
          </div>
          <div class="<%= "favorite-" + post.id.to_s %> col-auto mr-4 text-center">
            <%= render "public/favorites/btn", post: post %>
          </div>
          <%= link_to post_path(post) do %>
            <div class="col-auto mr-4 text-center">
              <%= render "public/post_comments/counter", post: post %>
            </div>
          <% end %>
        </div>
        <div class="row justify-content-center border-bottom">
          <%= link_to post_path(post) do %>
            <div class="col-10 my-3 mx-auto text-center">
              <%= image_tag post.get_post_image, class: "img-fluid" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
