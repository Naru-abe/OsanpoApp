<div class="container">
  <div class="row my-5 mx-auto border">
    <h4 class="col-10 my-3 mx-auto text-secondary">新規投稿を作成</h4>
    <div class="col-10 mx-auto">
      <%= form_with model: @post, url: posts_path, method: :post do |f| %>
        <div class="row mt-3 justify-content-center">
          <%= f.file_field :post_image, accept: "image/*" %>
        </div>

        <div class="row mt-3 justify-content-center">
          <%= f.text_area :content, class: "form-control textarea col-7", rows: "5" %>
        </div>

        <div class="row mt-3 justify-content-center">
          <%= f.select :tag_id, options_from_collection_for_select(Tag.all, :id, :name), { include_blank: "タグを選択" }, {class: "col-2 form-control" } %>
          <%= f.select :station_name, [["宇部新川駅", "1"],["草江駅", "2"],["新山口駅", "3"],["宇部駅", "4"],["居能駅", "5"],["雀田駅", "6"]], { include_blank: "駅を選択" }, { id: "station_name_id", class: "col-2 form-control offset-1" } %>
        </div>

        <div class="row mt-3 justify-content-center">
          <p>位置情報を追加する</p>
        </div>

        <div class="row my-5 justify-content-center">
          <%= f.submit "シェア", class: "col-2 btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>