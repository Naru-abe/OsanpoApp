<div class="container">
  <div class="row my-5 mx-auto border">
    <h4 class="col-10 my-3 mx-auto text-secondary">新規投稿を作成</h4>
    <div class="col-10 mx-auto">
      <%= form_with model: @post, url: posts_path, method: :post do |f| %>
        <div class="row mt-3 justify-content-center">
          <%= f.file_field :post_image, accept: "image/*", class: "col-md-7" %>
        </div>

        <div class="row mt-3 justify-content-center">
          <%= f.text_area :content, class: "form-control textarea col-md-7", rows: "5", placeholder: "キャプションを入力" %>
        </div>

        <div class="row mt-3 justify-content-center">
          <%= f.text_field :address, class: "form-control textarea col-md-7", placeholder: "位置情報を追加する" %>
        </div>

        <div class="row mt-3 justify-content-center">
          <%= f.select :tag_id, options_from_collection_for_select(Tag.all, :id, :name), { include_blank: "タグを選択" }, {class: "col-md-2 form-control my-1" } %>
          <%= f.select :station_name, options_for_select(["宇部新川駅","草江駅","新山口駅","宇部駅","居能駅","雀田駅"]), { include_blank: "駅を選択" }, { id: "station_name_id", class: "col-md-2 form-control offset-md-1 my-1" } %>
        </div>

        <div class="row my-5 justify-content-center">
          <%= f.submit "シェア", class: "col-md-2 btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>