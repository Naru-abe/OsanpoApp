<div class="container">
  <div class="row my-5 mx-auto border">
    <h4 class="col-10 my-3 mx-auto">プロフィール編集</h4>
    <div class="col-10 mx-auto">
      <%= form_with model: @end_user, url: end_user_path, method: :patch do |f| %>
        <div class="row mt-3 justify-content-center">
        <%= f.label "名前", class: "col-md-3" %>
        <%= f.text_field :name, autofocus: true, class: "col-md-7" %>
        </div>

        <div class="row mt-3 justify-content-center">
        <%= f.label "自己紹介", class: "col-md-3" %>
        <%= f.text_area :introduction, class: "col-md-7" %>
        </div>

        <div class="row mt-3 justify-content-center">
        <%= f.label "プロフィール写真", class: "col-md-3" %>
        <%= f.file_field :profile_image, accept: "image/*", class: "col-md-7" %>
        </div>

        <div class="row mt-3 justify-content-center">
        <%= f.label "メールアドレス", class: "col-md-3" %>
        <%= f.text_field :email, class: "col-md-7" %>
        </div>

        <div class="row my-5 justify-content-center">
        <%= f.submit "変更を保存", class: "col-md-2 btn btn-primary" %>
        <%= link_to "退会する", end_users_unsubscribe_path, class: "col-md-2 offset-md-1 mt-3 btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>