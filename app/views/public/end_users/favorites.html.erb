<div class="container">
  <h4 class="row py-5 mx-auto text-secondary">お気に入り一覧</h4>
  <div class="row justify-content-center">
    <% if @favorite_list.present? %>
      <% @favorite_list.each do |post| %>
        <%= link_to post_path(post) do %>
          <div class="col-10 my-3 text-center" style="width:80% heght:80%">
            <%= image_tag post.get_post_image, size: '300x300' %>
          </div>
          <% end %>
        <% end %>
    <% end %>
  </div>
</div>