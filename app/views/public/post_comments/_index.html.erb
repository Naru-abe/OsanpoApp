<% post.post_comments.each do |post_comment| %>
  <div class="row my-2 justify-content-center">
    <div class="col-2">
      <%= link_to end_user_path(post_comment.end_user), {class: "text-secondary"} do %>
        <%= image_tag post_comment.end_user.get_profile_image, size: "60x60" %>
        <%= post_comment.end_user.name %>
      <% end %>
    </div>
    <div class="col-8 col-md-5 px-md-0"><%= post_comment.comment %></div>
    <div class="col-md-2 text-right">
      <% if post_comment.end_user == current_end_user %>
        <%= link_to "削除する", post_post_comment_path(post, post_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "text-secondary", remote: true %>
      <% end %>
    </div>
  </div>
<% end %>