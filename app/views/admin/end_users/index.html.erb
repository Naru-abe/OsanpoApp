<div class="container">
  <div class="row my-5">
    <h4 class="col-10 my-3 mx-auto text-secondary">会員一覧</h4>
    <div class="col-10 mx-auto">
      <% @end_users.each do |user| %>
        <div class="row m-3 pt-3 justify-content-center border-top">
          <div class="col-2 text-center"><%= image_tag user.get_profile_image, size: '50x50' %></div>
          <div class="col-2">
            <%= link_to admin_end_user_path(user) do %>
              <%= user.name %>
            <% end %>
          </div>
          <div class="col-4"><%= user.introduction %></div>
          <div class="col-2">
            <% if user.is_deleted == false %>
              <b class="text-success">有効</b>
            <% else %>
              <b class="text-black-50">退会</b>
            <% end %>
          </div>
          <div class="col-2 text-center"><%= link_to '編集', edit_admin_end_user_path(user), class: "user_#{user.id} btn btn-info" %></div>
        </div>
      <% end %>
    </div>
    <div class="col-10 my-3 mx-auto">
      <%= paginate @end_users %>
    </div>
  </div>
</div>
