<div class="container">
  <div class="row my-5 mx-auto border">
    <h4 class="col-10 my-3 mx-auto text-secondary"><%= @end_user.name %>さんの会員情報編集</h4>
    <div class="col-10 mx-auto">
      <%= form_with model: @end_user, url: admin_end_user_path, method: :patch do |f| %>
        <div class="row mt-3 justify-content-center">
        <%= f.label "名前", class: "col-3 text-secondary" %>
        <%= f.text_field :name, autofocus: true, class: "col-7 form-control" %>
        </div>

        <div class="row mt-3 justify-content-center">
        <%= f.label "自己紹介", class: "col-3 text-secondary" %>
        <%= f.text_area :introduction, class: "col-7 form-control" %>
        </div>

        <div class="row mt-3 justify-content-center">
        <%= f.label "プロフィール写真", class: "col-3 text-secondary" %>
        <%= f.file_field :profile_image, accept: "image/*", class: "col-7" %>
        </div>

        <div class="row mt-3 justify-content-center">
        <%= f.label "メールアドレス", class: "col-3 text-secondary" %>
        <%= f.text_field :email, class: "col-7 form-control" %>
        </div>

        <div class="row mt-3 justify-content-center">
          <%= f.label :is_deleted, "会員ステータス", class: "col-3 text-secondary" %>
          <div class="col-7">
            <%= f.radio_button :is_deleted, :false, checked: true %>
            <%= f.label :is_deleted, "有効", value: false %>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会", value: true %>
          </div>
        </div>

        <div class="row my-5 justify-content-center">
        <%= f.submit "変更を保存", class: "col-2 btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>