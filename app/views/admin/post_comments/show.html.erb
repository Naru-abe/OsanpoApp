<div class="container">
  <div class="row my-5">
    <h4 class="col-10 my-3 mx-auto text-secondary"><%= @end_user.name %>さんのコメント一覧</h4>
    <div class="col-10 mx-auto">
      <% @post_comments.each do |comment| %>
        <div class="row m-3 pt-3 justify-content-center border-top">
          <div class="col-2 text-center"><%= image_tag comment.end_user.get_profile_image, size: '50x50' %></div>
          <div class="col-8"><%= comment.comment %></div>
          <div class="col-2 text-center"><%= link_to '削除', admin_post_post_comment_path(post_id: comment.post.id, id: comment.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-outline-danger" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
