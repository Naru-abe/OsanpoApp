<div class="container">
  <div class="row my-5">
    <h4 class="col-10 my-3 mx-auto text-secondary">投稿一覧</h4>
    <div class="col-10 mx-auto">
      <% @posts.each do |post| %>
        <div class="row m-3 pt-3 justify-content-center border-top">
          <div class="col-2 text-center"><%= image_tag post.get_post_image, size: '50x50' %></div>
          <div class="col-8"><%= post.content %></div>
          <div class="col-2 text-center"><%= link_to '削除', admin_post_path(post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-outline-danger" %></div>
        </div>
      <% end %>
    </div>
    <div class="col-10 my-3 mx-auto">
      <%= paginate @posts %>
    </div>
  </div>
</div>
