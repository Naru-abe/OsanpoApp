<%= form_with model: @tag, url: admin_tags_path, method: :post do |f| %>

  <%= f.label "タグ名" %>

  <%= f.text_field :name %>

  <%= f.submit "新規登録", class: 'btn btn-outline-success' %>

<% end %>

<% @tags.each do |tag| %>
  <%= tag.name %>
  <%= link_to '編集', edit_admin_tag_path(tag.id), class: "btn btn-sm btn-outline-success" %>
<% end %>