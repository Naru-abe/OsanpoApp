<div class="container">
  <div class="row my-5 mx-auto border">
    <h1 class="col-10 my-3 mx-auto text-center">
      OsanpoApp</br>
      管理者ログイン
    </h1>

    <div class="col-8 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field row mt-3 justify-content-center">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "col-7" %>
        </div>

        <div class="field row mt-3 justify-content-center">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "col-7" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field row mt-3 justify-content-center">
            <%= f.check_box :remember_me %>
            <%= f.label "ログイン情報を記憶する" %>
          </div>
        <% end %>

        <div class="actions row mt-3 mb-5 justify-content-center">
          <%= f.submit "ログイン", class: "col-7 btn btn-primary" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>

    </div>
  </div>
</div>